        mounted: function () {
          var self = this
  
          self.$nextTick(function () {
            self.interval = setInterval(function () {
  
              window.TweenLite.to(self.$refs.slide, 0.8, {
                opacity: 0,
                onComplete: function () {
                  self.activeIndex = (self.activeIndex + 1) % self.testimonials.length
  
                  window.TweenLite.to(self.$refs.slide, 0.8, {
                    opacity: 1
                  })
                }
              })
            }, self.intervalTime)
          })
        },
  
        beforeDestroy: function () {
          clearInterval(this.interval)
        }
      });
  
      var featured = new Vue({
        el: "#featuredPost",
  
        data: {
          loading: false,
          post: null
        },
  
        delimiters: ['\\{', '}'],
      });
  
      var posts = new Vue({
        el: "#posts",
  
        data: {
          posts: [],
          loading: false
        },
  
        delimiters: ['\\{', '}'],
      });
  
      var featuredUrl = ghost.url.api('posts', { filter: 'featured:true' } );
      console.log(featuredUrl)
  
