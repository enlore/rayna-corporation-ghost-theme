{{!-- The main content area on the homepage --}}
<main class="content" id="content" role="main">
  <div class="indexHeader white hasBg" style="background-image: url('{{ asset 'index-banner.jpg' }}')">
    <header>
      <h1 class="half"> We build efficiency and accelerate business growth.</h1>
    </header>
  </div>
  <div class="indexLead primaryBg-shade white">
    <section class="collapse">
      <h2 class="white half">
        We’re productivity experts. Want to know what we know?
        
      </h2>
      <div class="half">
        <!--button.btn--secondary.btn--emboss.btn--fullWidth(style="margin-top: 16px;") #AskRayNa--><a href="/contact-us">
          <button class="btn--askRayna btn--secondary btn--emboss btn--fullWidth" style="margin-top: 32px">#AskRayNa</button></a>
        <p class="caption">It's really simple.</p>
      </div>
    </section>
  </div>
  <section>
    <div class="whole">
      <p class="annotation">What we’re about.</p>
    </div>
    <div class="half">
      <h1 class="colorPrimary">We meet you where you are.</h1>
      <p class="bodyCopy--large">
        As efficiency experts, we help you make money faster, easier and smarter.
        We create systems for optimal growth, or maximize pre-existing ones.
        
      </p><a href="/services">
        <p class="colorPrimary bodyCopy--large">Learn more &gt;&gt;</p></a>
    </div>
    <div class="half"><img class="contentImg" src="{{ asset 'rayna-logo.png' }}"/></div>
  </section>
  <div class="indexIntro secondaryBg-shade white">
    <section>
      <h2>See what everyone is yappin’ about.</h2>
      <div class="white">
        <div id="testimonial-slider">
          <div class="slide" ref="slide">
            <h3>\{ testimonials[activeIndex].author }</h3>
            <!--p.bodyCopy--large CEO & Co-Founder, Chrometa-->
            <p>\{ testimonials[activeIndex].content }</p>
          </div>
        </div>
      </div>
    </section>
  </div>
  <section>
    <div class="whole">
      <p class="annotation">What we're talking about.</p>
      <div id="featuredPost" style="overflow: hidden">
        <div class="loading" v-if="loading">
          <p>loading</p>
        </div>
        <div class="loaded" v-else="v-else"><a class="postinner" v-if="post" :href="post.url">
            <div class="half"><img class="contentImg" v-if="post.image" :src="post.image"/><img class="contentImg" v-else="v-else" src="{{ asset 'desk-img.jpg' }}"/></div>
            <div class="half">
              <h1 class="colorPrimary" style="margin-top: 0">\{ post.title }</h1>
              <p class="bodyCopy--large postSummary-excerpt">\{ post.html | excerpt }</p>
              <p class="bodyCopy--large">11/04/16  •  5 min read</p>
            </div></a>
          <p class="no-posts" v-else="v-else">Nothing here yet. Check back soon.</p>
        </div>
      </div>
      <hr style="margin-top: 48px"/>
      <div class="row postSummaries" id="posts">
        <div class="loading" v-if="loading">
          <p>loading</p>
        </div>
        <div class="loaded" v-else="v-else">
          <div class="postsinner" v-if="posts.length &gt; 0">
            <template v-for="post in posts"><a class="half" :href="post.url"><img class="contentImg" v-if="post.image" :src="post.image"/><img class="contentImg" v-else="v-else" src="{{ asset 'desk-img.jpg' }}"/>
                <h3 class="colorPrimary">\{ post.title }</h3>
                <p class="bodyCopy postSummary-excerpt">
                  \{ post.html | excerpt }
                  
                </p>
                <p class="bodyCopy">\{ post.published_at | fmatDate } • \{ post.markdown | calcReadTime } min read</p></p></a></template>
          </div>
          <p class="no-posts" v-else="v-else">Nothing here yet. Check back soon.</p>
        </div>
      </div>
    </div>
  </section>
</main>
