
{{!< default}}
{{#post}}
{{#if image }}
<div class="bgWrap" style="background-image: url('/assets/desk-img.jpg');">
{{else }}
<div class="bgWrap">
{{/if }}
<div class="blackGradientMask">
  <div class="articleHeader white">
    <header>
      <h1 class="half">{{ title }}</h1>
    </header>
  </div>
</div></div> <!-- /bgWrap -->
<div class="articleContent black">
  <article>{{ content }}</article>
</div>
<hr/>
<div class="container row">
  <div class="half">
    <p>Recent Posts</p>
  </div>
  <div class="half">
    <p class="u-text-right"><a href="/blog">More Posts &gt;&gt;</a></p>
  </div>
</div>
<section>{{#prev_post}}<a href="{{url}}">
    <div class="half"><img src="//placehold.it/450x300"/>
      <h3>{{ title }}</h3>
      <p>{{ excerpt words="20" }} &hellip;</p>
      <p>11/04/16 • 5 min read</p>
    </div></a>
  {{/prev_post}}
  {{#next_post}}<a href="{{url}}">
    <div class="half"><img src="//placehold.it/450x300"/>
      <h3>{{ title }}</h3>
      <p>{{ excerpt words="20" }} &hellip;</p>
      <p>11/04/16 • 5 min read</p>
    </div></a>{{/next_post}}
</section>{{/post}}