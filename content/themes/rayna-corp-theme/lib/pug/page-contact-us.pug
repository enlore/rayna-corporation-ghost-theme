script(type="text/javascript").
  ;(function () {
    window.addEventListener("load", function () {
      var form = new Vue({
        el: "#form",
        data: {
          email: "",
          name: "",
          phone: "",
          message: "",
          robot: "",
          isValid: false,
          isDirty: false,
          error: null,
          info: null
        },

        methods: {
          submit: function submit (ev) {
            var postBody = {
              email: this.email,
              name: this.name,
              phone: this.phone,
              message: this.message
            };

            if (this.robot !== '')
              postBody['domo-arigato-mr-roboto'] = 'this looks like a robot';

            this.post(postBody);
          },

          post: function post (body) {
            var opts = {
              method: "POST",
              body: JSON.stringify(body),
              headers: {
                'Content-Type': 'application/json'
              }
            };

            var self = this;

            fetch('/api/ask-rayna', opts)
            .then(window.rayna.checkStatus)
            .then(function onJSON (body) {
              self.loading = false;

              self.clear();

              self.info = {
                message: "Thank you for your submission. We'll get back to you soon!"
              };
            })
            .catch(function (err) {
              self.loading = false;

              self.error = {
                message: "Hey, something went wrong. Please try again or email <EMAIL HERE> directly."
              };
            });
          },

          clear: function clear () {
            this.email = "";
            this.name = "";
            this.phone= "";
            this.message = "";
            this.robot = "";
            this.isDirty = false;
            this.isValid = false;
            this.info = null;
            this.error = null;
          },

          closeInfo: function closeInfo () { this.info = null; },
          closeError: function closeError () { this.error = null; },
        },

        delimiters: ['\\{', '}'],
      });

      //form.mount();
    });
  })();

