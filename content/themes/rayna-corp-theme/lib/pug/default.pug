doctype html
html
  head
    | {{!-- Document Settings --}}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")

    | {{!-- Page Meta --}}
    title {{ meta_title }}
    meta(name="description", content="{{meta_description}}")

    | {{!-- Mobile Meta --}}
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    | {{!-- Brand icon --}}
    link(rel="shortcut icon", href="{{asset 'favicon.ico'}}")

    | {{!-- Styles'n'Scripts --}}
    link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Lora")
    link(rel="stylesheet", type="text/css", href="{{ asset 'css/normalize.css' }}")
    link(rel="stylesheet", type="text/css", href="{{asset 'css/main.css'}}")

    | {{!-- Ghost outputs important style and meta data with this tag --}}
    | {{ghost_head}}

  body(class="{{ body_class }}")

    | {{!-- The blog navigation links --}}
    | {{navigation}}

    .site-wrap
      | {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
      | {{{body}}}

      | {{!-- The tiny footer at the very bottom --}}

    .outroCta.primaryBg
      section
        .seven
          h3.white Get weekly insights from RayNa.
          h4 Directly in your inbox every Friday Morning.

        .five
          input(type="email", placeholder="email address")

    .footer.primaryBg-shade.white
      footer
        .five
          h3 RayNa Corp

          p We're pretty social.

          p.
            Get tuned in to the best words from industry leaders down to the
            very minute.

          .footer-socialLinks
            a(href="") Twitter
            a(href="", style="margin-left: 1rem;") Facebook

          p Â© RayNa Corp 2016

        .seven
          .footer-siteNav
            a(href="/blog") Blog
            a(href="/contact-us") #AskRayna
            a(href="/services") Services
            a(href="/contact-us") Contact

          .row.footer-cta
            .half
              p Still confused after reading all that?

            .half
              a(href="/contact-us")
                button.btn--fullWidth.btn--secondary.u-pullRight() Ask RayNa

          .row.footer-address.u-text-right(style="margin-top: 48px;")
            .whole
              p 320 E Main St. Ste 200
              p Murfreesboro, TN 37130



    script(type="text/javascript", src="https://unpkg.com/promise-polyfill")
    script(type="text/javascript", src="https://unpkg.com/whatwg-fetch")
    script(type="text/javascript", src="https://unpkg.com/moment")
    script(type="text/javascript", src="https://unpkg.com/vue/dist/vue.js")
    | {{!-- jQuery needs to come before `{{ghost_foot}}` so that jQuery can be used in code injection --}}
    script(type="text/javascript", src="https://unpkg.com/jquery")

    | {{!-- Ghost outputs important scripts and data with this tag --}}
    | {{ghost_foot}}

